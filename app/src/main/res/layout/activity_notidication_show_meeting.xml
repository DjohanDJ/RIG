<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.NotificationShowMeeting">

    <TextView
        android:id="@+id/notif_alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting will start in 5 minutes"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/notif_join_zoom"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/button1"
            android:textColor="#ffffff"
            android:text="Join"
            android:layout_margin="10dp"
            />
        
        <Button
            android:id="@+id/notif_copy_link"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/button1"
            android:textColor="#ffffff"
            android:text="Copy Link"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/notif_dismiss"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/button_delete"
            android:textColor="#ffffff"
            android:text="Dismiss"
            android:layout_margin="10dp"
            />
        
    </LinearLayout>



</LinearLayout>